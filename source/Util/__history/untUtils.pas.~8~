unit untUtils;

interface

uses
  FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error,
  FireDAC.DatS, FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async,
  FireDAC.DApt, FireDAC.Comp.DataSet, FireDAC.Comp.Client, untDm;

  TUtils = class
    private
    public
      class function MinhaQuery(ASql: String; AExec: Boolean): TFDQuery;
  end;


implementation

class function TUtils.MinhaQuery(ASql: String; AExec: Boolean): TFDQuery;
begin
  Result := TFDQuery.Create(nil);
  Result.Connection := Dm.FDConnection1;
  Result.Close;
  Result.SQL.Clear;
  Result.SQL.Add(Asql);
  if AExec then
    Result.ExecSQL
  else
    Result.Open;
end;

end.
